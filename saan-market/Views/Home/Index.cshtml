                </div>
            </div>
        </div> <!-- /title -->

        <div class="row popup-products blocks-spacer">

@model List<saan_market.Models.Product>
@foreach (var item in Model)
{

            <!--  ==========  -->
            <!--  = Product =  -->
            <!--  ==========  -->
            <div class="span3">
                <div class="product">
                    <div class="product-img">
                        <div class="picture">
                            <!--        <img width="540" height="374" alt="" src="images/dummy/products/product-3.jpg" /> -->
                            @if (item.Pictures.Count > 0)
                            {
                                <img width="540" height="374" src="@Url.Content(item.Pictures.First().path.Replace(Request.ServerVariables["APPL_PHYSICAL_PATH"], "~/").Replace(@"\", "/"))" alt="Image" />
                            }
                            else
                            {
                                <img width="540" height="374" alt="" src="~/Content/images/404.png" />
                            }
                            <div class="img-overlay">
                                @Html.ActionLink("توضیحات بیشتر", "DisplayProduct", "Product", new { productId = item.id }, new { @class = "btn more btn-primary" })
                                <a class="btn buy btn-danger">
                                    <a class="btn buy btn-danger" href="#">اضافه به سبد خرید</a>
                                </a>
                            </div>
                        </div>
                    </div>
<div class="main-titles no-margin">
                        <h4 class="title">$32</h4>
